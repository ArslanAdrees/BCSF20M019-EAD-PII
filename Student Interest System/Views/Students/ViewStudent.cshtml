@model Student_Interest_System.Models.UpdateStudentViewModel
@{
}

<h2>Edit Student</h2>
<form method="post" action="ViewStudent">
    <div class="mb-3">
        <label for="" class="form-label">Id</label>
        <input type="text" class="form-control" asp-for="Id" readonly>
    </div>
    <div class="mb-3">
        <label for="" class="form-label">Name</label>
        <input type="text" class="form-control" asp-for="Name" >

    </div>
    <div class="mb-3">
        <label for="" class="form-label">Roll Number</label>
        <input type="text" class="form-control" asp-for="Rollno" >
    </div>
    <div class="mb-3">
        <label for="" class="form-label">Email Address</label>
        <input type="email" class="form-control" asp-for="Email" >
    </div>
    <div class="mb-3">
        <label for="" class="form-label">Gender</label>
        <select class="form-select" asp-for="Gender" >
            <option selected disabled value="">Choose gender</option>
            <option value="Male">Male</option>
            <option value="Female">Female</option>
        </select>
    </div>
    <div class="mb-3">
        <label for="" class="form-label">Date of Birth</label>
        <input type="date" class="form-control" asp-for="DateOfBirth" >
    </div>
    <div class="mb-3">
        <label for="" class="form-label">City</label>
        <select class="form-select" asp-for="City">
            <option selected disabled value="">Choose City</option>
        </select>
    </div>
    <div class="input-group-append mb-3">
        <input type="text" class="form-control" asp-for="City" placeholder="Other city">
    </div>
    <div class="mb-3">
        <label for="" class="form-label">Interest</label>
        <select class="form-select" asp-for="Interest">
            <option selected disabled value="">Choose interest</option>
        </select>
    </div>
    <div class="input-group-append mb-3">
        <input type="text" class="form-control" asp-for="Interest" placeholder="Other Interest">
    </div>
    <div class="mb-3">
        <label for="" class="form-label">Department</label>
        <input type="text" class="form-control" asp-for="Department" required>

    </div>
    <div class="mb-3">
        <label for="" class="form-label">Degree Title</label>
        <select class="form-select" asp-for="DegreeTitle" >
            <option selected disabled value="">Choose Degree</option>
            <option value="Associate Degree">Associate Degree</option>
            <option value="Bachelors Degree">Bachelors Degree</option>
            <option value="M.Phil. Degree">M.Phil. Degree</option>
            <option value="Post-Graduate Diploma">Post-Graduate Diploma</option>
            <option value="Doctorate">Doctorate</option>
            <option value="Post Doctorate">Post Doctorate</option>
        </select>
    </div>
    <div class="mb-3">
        <label for="" class="form-label">Subject</label>
        <input type="text" class="form-control" asp-for="Subject" >
    </div>
    <div class="mb-3">
        <label for="" class="form-label">Start Date</label>
        <input type="date" class="form-control" asp-for="StartDate" >
    </div>
    <div class="mb-3">
        <label for="" class="form-label">End Date</label>
        <input type="date" class="form-control" asp-for="EndDate" >
    </div>
    <button type="submit" class="btn btn-primary">Update</button>
    <button type="submit" class="btn btn-danger" asp-action="DeleteStudent" asp-controller="Students">Delete</button>
    <button type="submit" class="btn btn-secondary" asp-action="Cancel" asp-controller="Students">Cancel</button>

</form>
